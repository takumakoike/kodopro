---
import Layout from '../layouts/Layout.astro';
import Headers from "../components/Headers.astro"
import Footer from "../components/Footer.astro"
//microCMS呼び出し
import { getBlogs } from "../library/microcms";
const response = await getBlogs({ fields: ["id", "title"] });
---

<Layout title="Welcome to Astro.">
	<Headers/>
	<main class="container mx-auto">
		<section class="mt-10 bg-white p-4">
				<h2 class="text-xl font-bold mt-10 text-center">開催記録</h2>
			<ul>
				{response.contents.map((content: any) => (
					<li class="">
						<a href={content.id} class="underline text-blue-600 hover:text-gray-600">{content.title}</a>
					</li>
						))}
			</ul>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}
</style>
